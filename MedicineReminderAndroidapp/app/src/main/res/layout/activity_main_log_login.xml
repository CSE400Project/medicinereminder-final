<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityLogLogin">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:textSize="42sp" android:text="Medicine Reminder" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginTop="48dp" android:id="@+id/textView"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_purple"
        android:textAlignment="center" android:textSize="32sp"
        android:text="Login"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="96dp"
        android:id="@+id/textView2"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/editTextloginUsername"
        android:inputType="textPersonName"
        android:hint="Username"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/editTextloginpassword"
        android:inputType="textPassword"
        android:hint="Password"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp" android:text="Login"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="32dp"
        android:id="@+id/buttonLoginin"
        android:background="@drawable/buttonshape" android:height="60dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:text="New Registration"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonLoginregister"
        android:background="@drawable/buttonshape"
        android:height="60dp"/>

</LinearLayout>