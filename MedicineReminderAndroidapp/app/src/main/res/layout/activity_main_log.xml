<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent" android:textColor="@android:color/holo_purple" android:textAlignment="center" android:textSize="32sp" android:text="Registration" android:layout_marginRight="24dp" android:layout_marginLeft="24dp" android:layout_marginTop="120dp" android:id="@+id/textView3"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent" android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="64dp" android:id="@+id/editTextregUsername" android:inputType="textPersonName" android:hint="Username"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp" android:id="@+id/editTextregPassword" android:inputType="textPassword" android:hint="Password"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/editTextregconPassword" android:inputType="textPassword" android:hint="Confirm Password"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent" android:textSize="18sp"
        android:text="Register" android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:id="@+id/buttonNewRegister"
        android:background="@drawable/buttonshape"
        android:height="60dp"/>

    


</LinearLayout>